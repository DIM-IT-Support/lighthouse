{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "managedByTenantId": {
      "type": "string",
      "metadata": {
        "description": "The Azure Active Directory tenant ID of the managing (MSP) tenant."
      }
    },
    "authorizations": {
      "type": "array",
      "metadata": {
        "description": "An array of objects defining delegated permissions. Each object requires: principalId, principalIdDisplayName, roleDefinitionId."
      }
    },
    "registrationDefinitionName": {
      "type": "string",
      "defaultValue": "DIM-IT - ARM Access",
      "metadata": {
        "description": "The name of the registration definition."
      }
    },
    "registrationDefinitionDescription": {
      "type": "string",
      "defaultValue": "Provides access to DIM-IT team.",
      "metadata": {
        "description": "Description for the registration definition."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.ManagedServices/registrationDefinitions",
      "apiVersion": "2022-10-01",
      "name": "[guid(parameters('registrationDefinitionName'), parameters('managedByTenantId'))]",
      "properties": {
        "description": "[parameters('registrationDefinitionDescription')]",
        "authorizations": "[parameters('authorizations')]",
        "managedByTenantId": "[parameters('managedByTenantId')]",
        "registrationDefinitionName": "[parameters('registrationDefinitionName')]"
      }
    }
  ]
}
